{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",

    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],

    "declaration": true,
    "emitDeclarationOnly": true,

    "sourceMap": true,

    "jsx": "preserve",
    "allowJs": true,
    "noImplicitAny": false,

    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "paths": {
      "@src/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules/",
    "lib",
    "es"
  ]
}
